@page
@model WeCare.ViewModels.OpportunityInvitationEmailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Volunteer Opportunity Invitation</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			font-size: 14px;
			line-height: 1.5;
			background-color: #f6f6f6;
		}
		h1 {
			font-size: 24px;
			color: #333333;
			margin-top: 0;
			margin-bottom: 16px;
		}
		p {
			margin-top: 0;
			margin-bottom: 16px;
		}
	</style>
</head>
<body>
	<h1>WeCare</h1>
	<p>Parabéns, @Model.CandidateName!</p>
	<p>Você foi convidado para a seguinte oportunidade: <a href="http://localhost:8085/opportunity-invitations/@Model.OpportunityId" class="button">@Model.OpportunityName</a></p>
	@if (Model.InvitationMessage.IsNullOrEmpty()) 
	{
		<p>Mensagem de convite: @Model.InvitationMessage
	}
</body>
</html>